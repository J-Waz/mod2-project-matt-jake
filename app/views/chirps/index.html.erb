<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
<h1><strong><%= current_user.email %>'s  Chirps!</strong></h1>

					<div>
						<p class="heading">Total Chirps: <%= current_user.chirps.count %></p>
						<p class="title is-6"></p>
					</div>

  <thead>

<%= link_to 'New Chirp', new_chirp_path %>
            
              <p class="control">
                <%= link_to current_user.email, edit_user_registration_path%>
              </p>
              <p>
                <%= link_to "Logout", destroy_user_session_path, method: :delete%>
              </p>
            <% else %>
            <p class="control">
              <%= link_to 'Sign In', new_user_session_path%>
            </p>
						<p class="control">
              <%= link_to 'Sign Up', new_user_registration_path%>
            </p>
            <% end %>

<% if user_signed_in? %>
    <tr>
      <h2><strong>Chirps</strong></h2>
      <th colspan="3"></th>
    </tr>
  </thead>
</br>

<table>
  <tbody>
    <% @chirps.each do |chirp| %>
      <tr>
        <td><%= chirp.chirp %></td>
        <td><%= chirp.created_at %></td>
        <td><%= link_to 'Show', chirp %></td>
        <td><%= link_to 'Edit', edit_chirp_path(chirp) %></td>
        <td><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
