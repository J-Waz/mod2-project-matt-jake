<h1> <%= @user.name %> </h1>

<% if flash[:follow_success] %>
	<%= flash[:follow_success] %>
<% end %>

<h2>	<% if @friend_ids.include? @user.id %>
			<% this_friendship = Friendship.where(follower_id: current_user.id, friend_id: @user.id) %>
			<%= link_to "Unfollow", friendships_path(this_friendship.first.id), method: :destroy %>
		<% else %>
			<%= link_to "Follow", friendships_path({follower_id: current_user.id, friend_id: @user.id}), method: :create %>
		<% end %> </h2>

<% @chirps.each do |chirp| %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(chirp.user.email, size: 64) %>
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= link_to chirp.user.email, user_path(chirp.user.id) %></strong><br/>
  				<p><%= chirp.chirp_text %></p>
  			</div>
        <% if user_signed_in? && current_user.id == chirp.user_id %>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to chirp, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_chirp_path(chirp), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to root_path, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>